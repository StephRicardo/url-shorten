<div class="well bs-component">
  <%= form_with(model: url, local: true) do |form| %>
    <% if url.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(url.errors.count, "error") %> prohibited this url from being saved:</h2>

        <ul>
        <% url.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <p><%= form.label 'Enter your URL below!' %></p>
      <%= form.text_field :long_url, id: :url_long_url %>
    </div>

    <div class="actions">
      <%= form.submit 'Make it Short', :class => "btn btn-primary btn-sm" %>
    </div>
  <% end %>
</div>